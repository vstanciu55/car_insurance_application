<p id="notice"><%= notice %></p>

<h1>Listing Vehicles</h1>

<table>
  <thead>
    <tr>
      <th>Vehicle registration</th>
      <th>Estimated annual mileage</th>
      <th>Estimated vehicle value</th>
      <th>Typical parking location</th>
      <th>Policy start date</th>
      <th>Customer ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.vehicle_registration %></td>
        <td><%= vehicle.estimated_annual_mileage %></td>
        <td><%= vehicle.estimated_vehicle_value %></td>
        <td><%= vehicle.typical_parking_location %></td>
        <td><%= vehicle.policy_start_date %></td>
        <td><%= vehicle.customer_id %></td>
        <td><%= link_to 'Show', vehicle %></td>
        <td><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
        <td><%= link_to 'Destroy', vehicle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

